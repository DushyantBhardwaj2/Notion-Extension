{
    "manifest_version": 3,
    "name": "Notion Task Manager",
    "version": "2.0.0",
    "description": "Advanced task management with calendar integration for Notion workspaces",
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "alarms",
        "tabs",
        "identity"
    ],
    "host_permissions": [
        "https://api.notion.com/*",
        "https://oauth2.googleapis.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup-enhanced.html",
        "default_title": "Notion Task Manager",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
