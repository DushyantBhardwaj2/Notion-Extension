{
    "manifest_version": 3,
    "name": "Notion Todo Extension",
    "version": "1.0.0",
    "description": "A Brave/Chrome extension to inject todos into your Notion database",
    "permissions": [
        "storage",
        "contextMenus",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://api.notion.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup-simple.html",
        "default_title": "Notion Todo",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
